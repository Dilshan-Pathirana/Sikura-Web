@tailwind base;
@tailwind components;
@tailwind utilities;

:root {
  --bg: #020617;
  --text: #f8fafc;
  --muted: #94a3b8;
}

html, body, #root {
  height: 100%;
}

body {
  font-family: 'Inter', 'Outfit', system-ui, -apple-system, Segoe UI, Roboto, 'Helvetica Neue', Arial;
  margin: 0;
  background: var(--bg);
  color: var(--text);
  -webkit-font-smoothing: antialiased;
}
